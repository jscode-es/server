{
    "include": ["src/**/*"],
    "exclude": ["node_modules","**/*.spec.ts"],
    "compilerOptions": 
    {
        "removeComments": true,
        "outDir": "./dist",
        "module":"commonjs",
        "strict":true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": false,   
         
    }
}