{
  "name": "jscode",
  "version": "1.0.0",
  "description": "",
  "main": "dist/start.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "npm run clean && npm run tsc:server && npm run tsc:public && npm run move && npm run public && npm run sass",
    "tsc:server": "tsc --project tsconfig.server.json && tscpaths -p tsconfig.server.json -s ./src -o ./dist",
    "tsc:public": "tsc --project tsconfig.public.json && tscpaths -p tsconfig.public.json -s ./src -o ./dist",
    "clean": "rimraf dist/",
    "move": "copyfiles -u 1 src/**/*.pug dist/",
    "public": "copyfiles -u 1 src/**/*.txt src/**/*.xml dist/",
    "sass": "node-sass src/public/scss/ -o dist/public/css --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSCode-es/server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JSCode-es/server/issues"
  },
  "homepage": "https://github.com/JSCode-es/server#readme",
  "eslintConfig": {
    "env": {
      "jest": true,
      "cypress/globals": true,
      "window": true
    },
    "plugins": [
      "cypress"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*",
      "public/.src/**/*"
    ],
    "ext": "pug,ts,scss,json",
    "exec": "npm run build && node -r ./dist/start.js",
    "verbose": false,
    "legacyWatch": true,
    "delay": 0
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "0.0.17",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.1.7",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/pug": "^2.0.5",
    "@types/redis": "^2.8.32",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.13.12",
    "esbuild-plugin-tsc": "^0.3.0",
    "jest": "^27.3.1",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "esbuild-sass-plugin": "^1.7.0",
    "express": "^4.17.1",
    "express-device": "^0.4.2",
    "express-fileupload": "^1.2.1",
    "express-session": "^1.17.2",
    "fs-extra": "^10.0.0",
    "http2-express-bridge": "^1.0.7",
    "is-ip": "^3.1.0",
    "js-cookie": "^3.0.1",
    "pug": "^3.0.2",
    "redis": "^3.1.2",
    "socket.io": "^4.3.1",
    "uuid": "^7.0.3"
  }
}