{
    "exclude": [
        "node_module",
        "**/*.test.ts",
        "**/*.spec.ts",
        "src/view/**/*",
        "src/controller/**/*",
        "src/model/**/*",
        "src/router/**/*",
        "src/start.ts"
    ],
    "include": [
        "src/public/**/*"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "allowJs": false,
        "checkJs": false,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "removeComments": true,
        "isolatedModules": false,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@controller/*": [
                "controller/*"
            ]
        },
        "types": [
            "jest",
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}